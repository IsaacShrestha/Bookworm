<div class="row">
	<div class="col-sm-4">
		{{#link-to 'books.new' class="btn btn-primary btn-block" }}Add new book{{/link-to}}
		{{#each model as |book|}}
			{{#unless book.isNew}}
				{{#link-to 'books.book' book class="list-group-item"}}{{book.title}}{{/link-to}}
			{{/unless}}
		{{/each}}
		
		{{books-list books=books}}
	</div>
	<div class="col-sm-4">
		{{outlet}}
	</div>
</div>